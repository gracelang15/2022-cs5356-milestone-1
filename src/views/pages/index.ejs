<body>
  <header>
    <%- include('../partials/nav') %>
  </header>
  <section class="hero is-fullheight is-primary">
    <div class="hero-body">
      <div class="container">
        <h1 class="title is-size-1">Ruffhouse</h1>
        <h2 class="subtitle">It's ruff out there. Socialize with other dogs today.</h2>
        <a class="button is-rounded is-medium is-dark" href="/sign-up">Sign Up!</a>
      </div>
    </div>
  </section>
  <section class="hero is-medium">
    <div class="hero-body">
      <div class="columns">
        <div class="column has-text-centered">
          <div class="contain-icon">
            <span class="icon">
              <i class="fa-solid fa-dog fa-4x"></i>
            </span>
          </div>
          <div class="feature is-size-3 mt-3">
            Join a community of dog lovers
          </div>
        </div>
        <div class="column has-text-centered">
          <div class="contain-icon">
            <span class="icon">
              <i class="fa-solid fa-eye fa-4x"></i>
            </span>
          </div>
          <div class="feature is-size-3 mt-3">
            View posts that other users have shared
          </div>
        </div>
        <div class="column has-text-centered">
          <div class="contain-icon">
            <span class="icon">
              <i class="fa-solid fa-share fa-4x"></i>
            </span>
          </div>
          <div class="feature is-size-3 mt-3">
            Share a new post with the community
          </div>
        </div>
    </div>
  </section>
