      .hero.is-fullheight.is-primary {
        background-image: linear-gradient(rgba(0,0,0, .3),rgba(0,0,0, .3)), url(https://images.unsplash.com/photo-1561037404-61cd46aa615b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);
      }
      .title {
        font-family: 'Balsamiq Sans', cursive;
      }
      .subtitle {
        font-family: 'Balsamiq Sans', cursive;
      }
      .button {
        font-family: 'Balsamiq Sans', cursive;
